{
  "manifest_version": 3,
  "name": "Action Recorder",
  "version": "1.0",
  "description": "Records user actions on a web page",
  "permissions": ["scripting", "storage", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.PNG"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}